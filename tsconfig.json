{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"@public/*": ["./public/*"],
			"@modules/*": ["./src/modules/*"],
			"@config/*": ["./src/config/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@components/*": ["./src/components/"],
			"@pages/*": ["./src/pages/*"],
			"@router/*": ["./src/router/*"],
			"@utils/*": ["./src/utils/*"],
			"@slices/*": ["./src/slices/*"],
			"@sprites/*": ["./src/sprites/*"],
			"@stores/*": ["./src/stores/*"],
			"@assets/*": ["./src/assets/*"],
			"@phaserGame/*": ["./src/phaserGame/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
